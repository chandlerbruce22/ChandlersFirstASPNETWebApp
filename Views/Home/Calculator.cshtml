@{
    ViewBag.Title = "Chandler Bruce";
}

@model CalculatorModel
@Html.ValidationSummary(false)


<body>

    <!-- Inputs and instructions for the javascript grade calculator -->

    <h2>Grade Calculation</h2>
    <p>Input your total percentage points for the given categories (Out of 100). Your final grade will be calculated.</p>

    <form method="post">
        <label>Assignments:</label>
        <input id="assignments" type="text" value="100" asp-for="assignments" />
        <br />
        <label>Group Project:</label>
        <input id="projects" type="text" value="100" asp-for="projects" />
        <br />
        <label>Quizzes:</label>
        <input id="quizzes" type="text" value="100" asp-for="quizzes" />
        <br />
        <label>Exams:</label>
        <input id="exams" type="text" value="100" asp-for="exams" />
        <br />
        <label>INTEX:</label>
        <input id="intex" type="text" value="100" asp-for="intex" />
        <br />
        <input type="button" value="Calculate" id="submitButton" />
    </form>

    <!-- ASP Error Messages -->

    <div asp-validation-summary="All"></div>

    <p id="gradeOutput">Grade Calculation...</p>

</body>